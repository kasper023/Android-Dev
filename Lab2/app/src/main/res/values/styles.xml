<resources xmlns:tools="http://schemas.android.com/tools">
    parent="@android:style/Widget.Material.Light.Button.Borderless"
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="PadButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>
    <style name="oppButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">#1c50eb</item>
    </style>
</resources>
